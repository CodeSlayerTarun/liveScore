<div class="row m-1 justify-content-center">
    <div class="col-xs-12 bg-light text-center btn-block border border-info rounded">
        <h3>Live Score Timeline</h3>
    </div>
</div>
<!-- scores below --> 
{{# each scores }}
<div class="row justify-content-center">
    {{# each this }}
    <div class="col-lg-4 col-md-12 mt-1 mb-1 text-center">
    <div class="img-thumbnail bg-light border border-primary rounded">
        <div class="caption">
        <h3>{{ this.eventName }}</h3>
        <p class="description">{{ this.eventType }}, <span> {{ this.format }}</span></p>
        <p class="description">{{ this.sportGender }}</p>
        <p class="description">{{ this.dateOfEvent }}</p>
        {{#if this.winningTeam }}
        <p class="description">{{ this.winningTeam }}, <span>{{ this.collegeNameTeamWinner }}</span>
        <div>Vs</div>
        {{ this.otherTeam }}, <span>{{ this.collegeNameTeamOther }}</span></p>
        {{/if}}
        {{#if this.winningTeam }}
        <p class="description">Winner: {{ this.winningTeam }}, <span>{{ this.collegeNameTeamWinner }}</p>
        {{/if}}
        {{#if this.winningParticpant1 }}
        <p class="description">Winner: {{ this.winningParticpant1 }}, <span>{{ this.collegeNameWinParticipant1 }}</p>
        {{/if}}
        {{#if this.winningParticpant2 }}
        <p class="description">First Runner Up: {{ this.winningParticpant2 }}, <span>{{ this.collegeNameWinParticipant2 }}</p>
        {{/if}}
        {{#if this.winningParticpant3 }}
        <p class="description">Second Runner Up: {{ this.winningParticpant3 }}, <span>{{ this.collegeNameWinParticipant3 }}</p>
        {{/if}}
        <hr>
        <p class="description">{{ this.someDescription }}</p>
        </div>
    </div>
    </div>
    {{/each}}
</div>
{{/each}}
<!--Pagination-->
<!--docs end message-->
<div class="row m-1 justify-content-center">
    <div class="col-xs-12 text-center">
        {{#if message}}
        <p class="text-muted">{{message}}</p>
        {{/if}}
    </div>
</div>
<div class="row m-1 justify-content-center text-center">
    <div class="col-xs-12">
        <ul class="pagination pagination-md justify-content-center">
        <li class="page-item"><a class="page-link" href="/{{prevPage}}">
            {{#if prevPage}}
            <span class="badge badge-info">{{prevPage}}</span> {{/if}}Previous</a>
            </li>
        <li class="page-item"><a class="page-link" href="javascript:void(0);">
            {{#if pageNum}}
            <span class="badge badge-primary">{{pageNum}}</span>
            {{else}}
            <span><p>Page</p></span>
            {{/if}}
            </a></li>
        <li class="page-item"><a class="page-link" href="/{{nextPage}}">
            Next {{#if nextPage}}<span class="badge badge-info">{{nextPage}}</span>{{/if}}</a></li>
        </ul>
    </div>
</div>
